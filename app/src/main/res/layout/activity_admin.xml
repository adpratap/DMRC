<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".admin"
        android:background="#2B2B2B"
        android:orientation="vertical">

    <TextView

            android:textSize="22sp"
            android:gravity="center"
            android:textColor="#BF282C"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/historyname" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"/>
    <TextView
            android:text="@string/history"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="@drawable/rounded_text"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hname"
            app:layout_constraintTop_toBottomOf="@+id/historyname" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="5dp"/>
    <ListView
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/hname" android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:id="@+id/listView"/>
</android.support.constraint.ConstraintLayout>