<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".attendence"

        android:background="#2B2B2B">

    <ImageView
            android:layout_width="213dp"
            android:src="@drawable/imagep"
            android:layout_height="211dp"
            android:id="@+id/profilepic"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/USRNAME"
            android:layout_marginTop="8dp"/>
    <EditText

            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/rounded_text"
            android:textStyle="bold"
            android:layout_width="309dp"
            android:layout_height="54dp"
            android:id="@+id/remarks" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/profilepic" android:layout_marginTop="10dp"
            android:hint="REMARKS"/>
    <Button
            android:text="UPLOAD"
            android:layout_width="201dp"
            android:layout_height="56dp"
            android:visibility="gone"
            android:background="@drawable/btn_rounded"
            android:id="@+id/button_upload"
            app:layout_constraintTop_toBottomOf="@+id/remarks"
            android:layout_marginTop="20dp" app:layout_constraintEnd_toEndOf="@+id/remarks"
            app:layout_constraintStart_toStartOf="@+id/remarks"/>
    <TextView
            android:text="ATTENDENCE"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="#DD4804"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <TextView
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="#FFA100"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/USRNAME"
            app:layout_constraintEnd_toEndOf="@+id/remarks" app:layout_constraintStart_toStartOf="@+id/remarks"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="106dp"
            android:layout_height="82dp"
            app:srcCompat="@drawable/svg"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/gpslg" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/gpslt" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/gpslg"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="101dp"
            android:id="@+id/progressBar3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thankyou" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/gpslg" app:layout_constraintVertical_bias="0.41"
            android:text="Your attendance has been recorded."
    android:textSize="20sp"
    android:visibility="gone"/>
    <TextView
            android:text="TAP ON IMAGE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taponimage" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_upload" android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/gpslt"
            app:layout_constraintVertical_bias="0.0"
            android:textSize="25sp"/>
</android.support.constraint.ConstraintLayout>