<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".attendence"

        android:background="#2B2B2B">

    <TextView
            android:layout_width="182dp"
            android:layout_height="45dp"
            android:text="DMRC"
            android:textSize="35sp"
            android:gravity="center"
            android:textColor="#BF282C"
            android:id="@+id/textlogo"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="80dp"
            android:background="#2B2B2B"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="215dp"
            android:src="@drawable/imagep"
            android:layout_height="222dp"
            android:id="@+id/profilepic"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" tools:ignore="MissingConstraints"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/USRNAME"
            app:layout_constraintHorizontal_bias="0.505"/>
    <EditText

            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#BF282C"
            android:background="@drawable/rounded_text"
            android:textStyle="bold"
            android:layout_width="309dp"
            android:layout_height="54dp"
            android:id="@+id/remarks" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/profilepic" android:layout_marginTop="24dp"
            android:hint="REMARKS"/>
    <Button
            android:text="UPLOAD"
            android:layout_width="201dp"
            android:layout_height="56dp"

            android:background="@drawable/btn_rounded"
            android:id="@+id/button_upload"
            app:layout_constraintTop_toBottomOf="@+id/remarks"
            android:layout_marginTop="44dp" app:layout_constraintEnd_toEndOf="@+id/remarks"
            app:layout_constraintStart_toStartOf="@+id/remarks"/>
    <TextView
            android:text="ATTENDENCE APP"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="#DD4804"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toBottomOf="@+id/textlogo"
            android:layout_marginTop="20dp"/>
    <TextView
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="#FFA100"

            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/USRNAME"
            app:layout_constraintEnd_toEndOf="@+id/remarks" app:layout_constraintStart_toStartOf="@+id/remarks"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.0" android:text="username"/>
    <ImageView
            android:layout_width="52dp"
            android:layout_height="47dp"
            app:srcCompat="@drawable/svg"
            android:id="@+id/imageView2" android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textlogo" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="101dp"
            android:id="@+id/progressBar3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>